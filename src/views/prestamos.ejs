<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Préstamos</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Gestión de Préstamos</h1>
        <button class="btn btn-teal" data-bs-toggle="modal" data-bs-target="#modalPrestamo">
            <i class="bi bi-plus-circle"></i> Nuevo Préstamo
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="tablaPrestamos">
                    <thead class="table-light">
                        <tr>
                            <th>Préstamo</th>
                            <th>Evento Asociado</th>
                            <th>Fecha Registro</th>
                            <th>Devolución Prevista</th>
                            <th>Responsable</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="cuerpoTabla">

                    </tbody>
                </table>
            </div>
            <div id="sinDatos" class="alert alert-info text-center mt-3" style="display:none;">
                No hay préstamos registrados aún.
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalPrestamo" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tituloModal">Nuevo Préstamo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formularioPrestamo">
                        <input type="hidden" id="idPrestamo">

                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Nombre del Préstamo *</label>
                                <input type="text" class="form-control" id="nombrePrestamo" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Evento *</label>
                                <select class="form-control" id="evento" required>
                                    <option value="">Seleccionar Evento</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="form-label">Fecha de Devolución Prevista *</label>
                                <input type="date" class="form-control" id="fechaDevolucionPrevista" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Responsable *</label>
                                <select class="form-control" id="responsable" required>
                                    <option value="">Seleccionar Responsable</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3 mt-4">
                            <h6 class="mb-3">Detalle de Préstamo</h6>

                            <div id="detalleContainer" class="p-3 border rounded">

                                <div id="listaItems">

                                    <div class="detalle-prestamo-item d-flex gap-3 mb-3">
                                        <div class="flex-fill">
                                            <label class="form-label">Item *</label>
                                            <select class="form-control item" required>
                                                <option value="">Seleccionar Item</option>
                                            </select>
                                        </div>

                                        <div class="flex-fill">
                                            <label class="form-label">Cantidad *</label>
                                            <input type="number" min="1" class="form-control cantidad" required>
                                        </div>

                                        <div class="d-flex align-items-end">
                                            <button type="button" class="btn btn-md btn-danger"
                                                onclick="eliminarItem(this)">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </div>
                                    </div>

                                </div>

                                <button type="button" class="btn btn-sm btn-secondary mt-3" onclick="agregarItem()">
                                    <i class="bi bi-plus"></i> Agregar Item
                                </button>

                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Observaciones</label>
                            <textarea class="form-control" id="observaciones"></textarea>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="form-label">Estado</label>
                                <select class="form-control" id="estadoActual">
                                    <option value="Activo">Activo</option>
                                    <option value="Pendiente">Pendiente</option>
                                    <option value="Vencido">Vencido</option>
                                    <option value="Devuelto">Devuelto</option>
                                </select>
                            </div>

                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-teal" id="btnGuardar">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalDetalles" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles del Préstamo</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div id="detallesContent"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const modalPrestamo = new bootstrap.Modal(document.getElementById('modalPrestamo'));
        const modalDetalles = new bootstrap.Modal(document.getElementById('modalDetalles'));

        let editando = false;
        let itemsCache = null;

        cargarPrestamos();

        document.getElementById('modalPrestamo').addEventListener('show.bs.modal', () => {
            if (!editando) {
                cargarEventos();
                cargarPersonas();
                cargarItems();
            }
        });

        document.getElementById('modalPrestamo').addEventListener('hidden.bs.modal', () => {
            document.getElementById('formularioPrestamo').reset();
            document.getElementById('idPrestamo').value = "";
            document.getElementById('tituloModal').innerText = "Nuevo Préstamo";
            editando = false;
        });

        document.getElementById('btnGuardar').addEventListener('click', guardarPrestamo);

        async function cargarPrestamos() {
            try {
                const res = await fetch('/api/prestamos');
                const datos = await res.json();

                const cuerpoTabla = document.getElementById('cuerpoTabla');
                const sinDatos = document.getElementById('sinDatos');

                cuerpoTabla.innerHTML = '';

                if (datos.ok && datos.data.length > 0) {
                    sinDatos.style.display = 'none';

                    datos.data.forEach(p => {
                        cuerpoTabla.innerHTML += `
                            <tr>
                                <td>${p.nombrePrestamo}</td>
                                <td>${p.evento?.nombreEvento || 'Sin nombre'}</td>
                                <td>${new Date(p.fechaPrestamo).toLocaleDateString()}</td>
                                <td>${new Date(p.fechaDevolucionPrevista).toLocaleDateString()}</td>
                                <td>${p.responsable?.nombreCompleto || 'Sin nombre'}</td>
                                <td>${p.estadoActual}</td>
                                <td>
                                    <button class="btn btn-sm btn-info" onclick="verDetalles('${p._id}')"><i class="bi bi-eye"></i></button>
                                    <button class="btn btn-sm btn-warning" onclick="editarPrestamo('${p._id}')"><i class="bi bi-pencil"></i></button>
                                    <button class="btn btn-sm btn-danger" onclick="eliminarPrestamo('${p._id}', '${p.nombrePrestamo}')"><i class="bi bi-trash"></i></button>
                                </td>
                            </tr>
                        `;
                    });
                } else {
                    sinDatos.style.display = 'block';
                }

            } catch (error) {
                console.error('Error cargando préstamos:', error);
            }
        }

        async function cargarEventos() {
            try {
                const res = await fetch('/api/eventos');
                const datos = await res.json();

                const select = document.getElementById('evento');
                select.innerHTML = '<option value="">Seleccionar Evento</option>';

                if (datos.ok && datos.data.length > 0) {
                    datos.data.forEach(ev => {
                        const option = document.createElement('option');
                        option.value = ev._id;
                        option.textContent = ev.nombreEvento;
                        select.appendChild(option);
                    });
                } else {
                    const option = document.createElement('option');
                    option.textContent = "No hay eventos registradas";
                    option.disabled = true;
                    select.appendChild(option);
                }

            } catch (error) {
                console.error('Error cargando eventos', error);
            }
        }

        async function cargarPersonas() {
            try {
                const res = await fetch('/api/personas');
                const datos = await res.json();

                const select = document.getElementById('responsable');
                select.innerHTML = '<option value="">Seleccionar Responsable</option>';

                if (datos.ok && datos.data.length > 0) {
                    datos.data.forEach(p => {
                        const option = document.createElement('option');
                        option.value = p._id;
                        option.textContent = p.nombreCompleto;
                        select.appendChild(option);
                    });
                } else {
                    const option = document.createElement('option');
                    option.textContent = "No hay personas registradas";
                    option.disabled = true;
                    select.appendChild(option);
                }

            } catch (error) {
                console.error('Error cargando personas', error);
            }
        }

        async function cargarItems() {
            try {
                if (!itemsCache) {
                    const res = await fetch('/api/items');
                    const datos = await res.json();
                    if (!datos.ok) {
                        console.error('No se obtuvieron items');
                        return;
                    }
                    itemsCache = datos.data;
                }

                const selects = document.querySelectorAll(".item");
                selects.forEach(sel => {
                    sel.innerHTML = '<option value="">Seleccionar Item</option>';
                    itemsCache.forEach(i => {
                        const option = document.createElement('option');
                        option.value = i._id;
                        option.textContent = i.nombreItem;
                        sel.appendChild(option);
                    });
                });
            } catch (error) {
                console.error('Error cargando items:', error);
            }
        }

        async function cargarItemsEnSelect(select) {
            try {
                if (!itemsCache) {
                    const res = await fetch('/api/items');
                    const datos = await res.json();
                    if (!datos.ok) {
                        console.error('No se obtuvieron items');
                        return false;
                    }
                    itemsCache = datos.data;
                }

                select.innerHTML = '<option value="">Seleccionar Item</option>';
                itemsCache.forEach(i => {
                    const option = document.createElement("option");
                    option.value = i._id;
                    option.textContent = i.nombreItem;
                    select.appendChild(option);
                });

                return true;
            } catch (error) {
                console.error('Error cargando items en select:', error);
                return false;
            }
        }

        async function agregarItem() {
            const lista = document.getElementById("listaItems");

            const fila = document.createElement("div");
            fila.classList.add("detalle-prestamo-item", "d-flex", "gap-3", "mb-3");

            fila.innerHTML = `
            <div class="flex-fill">
                <label class="form-label">Item *</label>
                <select class="form-control item" required>
                    <option value="">Seleccionar Item</option>
                </select>
            </div>

            <div class="flex-fill">
                <label class="form-label">Cantidad *</label>
                <input type="number" min="1" class="form-control cantidad" required>
            </div>

            <div class="d-flex align-items-end">
                <button type="button" class="btn btn-md btn-danger" onclick="eliminarItem(this)">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </div>
        `;

            lista.appendChild(fila);
            const nuevoSelect = fila.querySelector('.item');
            await cargarItemsEnSelect(nuevoSelect);

            return fila;
        }

        function eliminarItem(btn) {
            btn.closest(".detalle-prestamo-item").remove();
        }

        // Métodos CRUD
        async function verDetalles(id) {
            try {
                const res = await fetch(`/api/prestamos/${id}`);
                const data = await res.json();
                const p = data.data;
                const listaItems = p.items.map(i => `
                <li>${i.item?.nombreItem || 'Sin nombre'} — <strong>${i.cantidad}</strong></li>
                `).join('');

                document.getElementById('detallesContent').innerHTML = `
                <p><strong>Préstamo:</strong> ${p.nombrePrestamo}</p>
                <p><strong>Evento:</strong> ${p.evento?.nombreEvento}</p>
                <p><strong>Fecha del Préstamo:</strong> ${new Date(p.fechaPrestamo).toLocaleString()}</p>
                <p><strong>Devolución prevista:</strong> ${new Date(p.fechaDevolucionPrevista).toLocaleString()}</p>
                <p><strong>Responsable:</strong> ${p.responsable?.nombreCompleto}</p>
                <p><strong>Items prestados:</strong> ${p.items.length}</p>
                <ul>${listaItems}</ul>
                <p><strong>Estado:</strong> ${p.estadoActual}</p>
                `;

                modalDetalles.show();

            } catch (error) {
                console.error('Error viendo préstamo:', error);
            }
        }

        async function guardarPrestamo() {
            const id = document.getElementById('idPrestamo').value;
            const nombrePrestamo = document.getElementById('nombrePrestamo').value;
            const evento = document.getElementById('evento').value;
            const fechaDevolucionPrevista = document.getElementById('fechaDevolucionPrevista').value.split('T')[0];
            const responsable = document.getElementById('responsable').value;
            const observaciones = document.getElementById('observaciones').value;
            const estadoActual = document.getElementById('estadoActual').value;

            let items = [];
            document.querySelectorAll('#listaItems .detalle-prestamo-item').forEach(div => {
                items.push({
                    item: div.querySelector('.item').value,
                    cantidad: parseInt(div.querySelector('.cantidad').value)
                });
            });

            const datos = { nombrePrestamo, evento, fechaDevolucionPrevista, responsable, items, observaciones, estadoActual };

            try {
                const url = editando ? `/api/prestamos/${id}` : '/api/prestamos';
                const metodo = editando ? 'PUT' : 'POST';

                const res = await fetch(url, {
                    method: metodo,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(datos)
                });

                const data = await res.json();

                if (data.ok) {
                    cargarPrestamos();
                    modalPrestamo.hide();
                    alert(editando ? 'Préstamo actualizado correctamente' : 'Préstamo creado correctamente');
                } else {
                    alert('Error: ' + data.msg);
                }

            } catch (error) {
                console.error('Error al guardar préstamo:', error);
            }
        }

        async function editarPrestamo(id) {
            try {
                const resp = await fetch(`/api/prestamos/${id}`);
                const data = await resp.json();

                if (!data.ok) {
                    alert("Error cargando préstamo");
                    return;
                }

                const p = data.data;
                editando = true;

                await cargarEventos();
                await cargarPersonas();
                await cargarItems();

                document.getElementById('idPrestamo').value = p._id;
                document.getElementById('nombrePrestamo').value = p.nombrePrestamo || "";
                document.getElementById('fechaDevolucionPrevista').value = p.fechaDevolucionPrevista.split('T')[0];
                document.getElementById('observaciones').value = p.observaciones || "";
                document.getElementById('estadoActual').value = p.estadoActual || "Activo";
                document.getElementById('evento').value = p.evento?._id || "";
                document.getElementById('responsable').value = p.responsable?._id || "";

                const lista = document.getElementById('listaItems');
                lista.innerHTML = "";

                for (const it of p.items) {
                    const fila = await agregarItem();
                    const select = fila.querySelector('.item');

                    if (select.options.length <= 1) {
                        await cargarItemsEnSelect(select);
                    }

                    select.value = it.item?._id || "";
                    fila.querySelector('.cantidad').value = it.cantidad;
                }

                document.getElementById('tituloModal').innerText = "Editar Préstamo";
                modalPrestamo.show();

            } catch (error) {
                console.error("Error al editar préstamo:", error);
            }
        }

        async function eliminarPrestamo(id, nombre) {
            if (!confirm(`¿Estás seguro de que deseas eliminar ${nombre}?`)) return;

            try {
                const resp = await fetch(`/api/prestamos/${id}`, { method: 'DELETE' });
                const datos = await resp.json();

                if (datos.ok) {
                    alert('Préstamo eliminado correctamente');
                    cargarPrestamos();
                } else {
                    alert('Error: ' + datos.msg);
                }
            } catch (error) {
                console.error('Error al eliminar:', error);
            }
        }

    </script>
</body>