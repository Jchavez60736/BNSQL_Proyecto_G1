<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Devoluciones</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Gestión de Devoluciones</h1>
        <button class="btn btn-teal" data-bs-toggle="modal" data-bs-target="#modalDevolucion">
            <i class="bi bi-plus-circle"></i> Registrar Devolución
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="tablaDevoluciones">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha de Devolución</th>
                            <th>Préstamo Asociado</th>
                            <th>Persona Responsable </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="cuerpoTabla"></tbody>
                </table>
            </div>
            <div id="sinDatos" class="alert alert-info text-center mt-3" style="display:none;">
                No hay devoluciones registradas aún.
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalDevolucion" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tituloModal">Registrar Devolución</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formularioDevolucion">
                        <input type="hidden" id="idDevolucion">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="fechaDevolucion" class="form-label">Fecha Devolución *</label>
                                    <input type="date" class="form-control" id="fechaDevolucion" required>
                                    <small class="text-danger" id="errorFechaDevolucion"></small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="prestamoAsociado" class="form-label">Préstamo Asociado *</label>
                                    <select class="form-control" id="prestamoAsociado" required>
                                        <option value="">Seleccionar Préstamo</option>
                                    </select>
                                    <small class="text-muted" id="infoDevolucion"></small>
                                    <small class="text-danger" id="errorDevolucion"></small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="responsable" class="form-label">Responsable Devolución*</label>
                                    <select class="form-control" id="responsable" required>
                                        <option value="">Seleccionar Responsable</option>
                                    </select>
                                    <small class="text-muted" id="infoResponsable"></small>
                                    <small class="text-danger" id="errorResponsable"></small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 mt-4">
                            <h6 class="mb-3">Detalle de Devolucion</h6>
                            <div id="detalleContainer" class="p-3 border rounded">
                                <div id="listaItems">
                                    <div class="detalle-devolucion-item d-flex gap-3 mb-3">
                                        <div class="flex-fill">
                                            <label class="form-label">Item *</label>
                                            <select class="form-control item" required>
                                                <option value="">Seleccionar Item</option>
                                            </select>
                                        </div>

                                        <div class="flex-fill">
                                            <label class="form-label">Cantidad *</label>
                                            <input type="number" min="1" class="form-control cantidad" required>
                                        </div>

                                        <div class="flex-fill">
                                            <label class="form-label">Estado *</label>
                                            <select class="form-control estado" required>
                                                <option value="">Seleccionar Estado</option>
                                                <option value="Bueno">Bueno</option>
                                                <option value="Dañado">Dañado</option>
                                                <option value="Reparación requerida">Reparación requerida</option>
                                                <option value="Otro">Otro</option>
                                            </select>
                                        </div>

                                        <div class="d-flex align-items-end">
                                            <button type="button" class="btn btn-md btn-danger"
                                                onclick="eliminarItem(this)">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-sm btn-secondary mt-3" onclick="agregarItem()">
                                    <i class="bi bi-plus"></i> Agregar Item
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="observaciones" class="form-label">Observaciones Generales</label>
                            <textarea class="form-control" id="observaciones" rows="2"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-teal" id="btnGuardar">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalDetalles" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles de la Devolución</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="detallesContent"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const modalDevolucion = new bootstrap.Modal(document.getElementById('modalDevolucion'));
        const modalDetalles = new bootstrap.Modal(document.getElementById('modalDetalles'));

        let editando = false;
        let itemsCache = null;

        cargarDevoluciones();

        document.getElementById('modalDevolucion').addEventListener('show.bs.modal', () => {
            if (!editando) {
                cargarPrestamos();
                cargarPersonas();
                cargarItems();
            }
        });

        document.getElementById('modalDevolucion').addEventListener('hidden.bs.modal', () => {
            document.getElementById('formularioDevolucion').reset();
            document.getElementById('idDevolucion').value = "";
            document.getElementById('tituloModal').innerText = "Nueva Devolución";
            editando = false;
        });

        document.getElementById('btnGuardar').addEventListener('click', guardarDevolucion);

        async function cargarDevoluciones() {
            const res = await fetch('api/devoluciones');
            const datos = await res.json();

            const cuerpoTabla = document.getElementById('cuerpoTabla')
            const sinDatos = document.getElementById('sinDatos');

            cuerpoTabla.innerHTML = '';

            if (datos.ok && datos.data.length > 0) {
                sinDatos.style.display = 'none';

                datos.data.forEach(d => {
                    cuerpoTabla.innerHTML += `
                        <tr>
                            <td>${new Date(d.fechaDevolucion).toLocaleDateString('es-CR')}</td>
                            <td>${d.idPrestamo?.nombrePrestamo || "Sin nombre"}</td>
                            <td>${d.idPersonaDevuelve?.nombreCompleto || "Sin nombre"}</td>
                            <td>
                                <button class="btn btn-sm btn-info" onclick="verDetalles('${d._id}')"><i class="bi bi-eye"></i></button>
                                <button class="btn btn-sm btn-warning" onclick="editarDevolucion('${d._id}')"><i class="bi bi-pencil"></i></button>
                                <button class="btn btn-sm btn-danger" onclick="eliminarDevolucion('${d._id}')"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                    `;
                });
            } else {
                sinDatos.style.display = 'block';
            }
        }

        async function cargarPrestamos() {
            const res = await fetch('/api/prestamos');
            const datos = await res.json();

            const select = document.getElementById('prestamoAsociado');
            select.innerHTML = '<option value="">Seleccionar Préstamo</option>';

            if (datos.ok && datos.data.length > 0) {
                datos.data.forEach(p => {
                    const option = document.createElement('option');
                    option.value = p._id;
                    option.textContent = p.nombrePrestamo;
                    select.appendChild(option);
                });
            } else {
                const option = document.createElement('option');
                option.textContent = "No hay préstamos registrados";
                option.disabled = true;
                select.appendChild(option);
            }
        }

        async function cargarPersonas() {
            const res = await fetch('/api/personas');
            const datos = await res.json();

            const select = document.getElementById('responsable');
            select.innerHTML = '<option value="">Seleccionar Responsable</option>';

            if (datos.ok && datos.data.length > 0) {
                datos.data.forEach(p => {
                    const option = document.createElement('option');
                    option.value = p._id;
                    option.textContent = p.nombreCompleto;
                    select.appendChild(option);
                });
            } else {
                const option = document.createElement('option');
                option.textContent = "No hay personas registradas";
                option.disabled = true;
                select.appendChild(option);
            }
        }

        async function cargarItems() {
            if (!itemsCache) {
                const res = await fetch('/api/items');
                const datos = await res.json();
                if (!datos.ok) {
                    console.error('No se obtuvieron items');
                    return;
                }
                itemsCache = datos.data;
            }

            const selects = document.querySelectorAll(".item");
            selects.forEach(sel => {
                sel.innerHTML = '<option value="">Seleccionar Item</option>';
                itemsCache.forEach(i => {
                    const option = document.createElement('option');
                    option.value = i._id;
                    option.textContent = i.nombreItem;
                    sel.appendChild(option);
                });
            });
        }

        async function cargarItemsEnSelect(select) {
            try {
                if (!itemsCache) {
                    const res = await fetch('/api/items');
                    const datos = await res.json();
                    if (!datos.ok) {
                        console.error('No se obtuvieron items');
                        return false;
                    }
                    itemsCache = datos.data;
                }

                select.innerHTML = '<option value="">Seleccionar Item</option>';
                itemsCache.forEach(i => {
                    const option = document.createElement("option");
                    option.value = i._id;
                    option.textContent = i.nombreItem;
                    select.appendChild(option);
                });

                return true;
            } catch (error) {
                console.error('Error cargando items en select:', error);
                return false;
            }
        }

        async function agregarItem() {
            const lista = document.getElementById("listaItems");
            const fila = document.createElement("div");
            fila.classList.add("detalle-devolucion-item", "d-flex", "gap-3", "mb-3");
            fila.innerHTML = `
            <div class="flex-fill">
                <label class="form-label">Item *</label>
                <select class="form-control item" required>
                    <option value="">Seleccionar Item</option>
                </select>
            </div>
            
            <div class="flex-fill">
                <label class="form-label">Cantidad *</label>
                <input type="number" min="1" class="form-control cantidad" required>
            </div>
            
            <div class="flex-fill">
                <label class="form-label">Estado *</label>
                <select class="form-control estado" required>
                    <option value="">Seleccionar Estado</option>
                    <option value="Bueno">Bueno</option>
                    <option value="Dañado">Dañado</option>
                    <option value="Reparación requerida">Reparación requerida</option>
                    <option value="Otro">Otro</option>
                </select>
            </div>
            
            <div class="d-flex align-items-end">
                <button type="button" class="btn btn-md btn-danger" onclick="eliminarItem(this)">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </div>
            `;

            lista.appendChild(fila);
            const nuevoSelect = fila.querySelector('.item');
            await cargarItemsEnSelect(nuevoSelect);

            return fila;
        }

        function eliminarItem(btn) {
            btn.closest(".detalle-devolucion-item").remove();
        }

        async function verDetalles(id) {
            const res = await fetch(`/api/devoluciones/${id}`);
            const datos = await res.json();
            const d = datos.data;

            const listaItems = d.detalles.map(i => `
            <li>
                ${i.idItem?.nombreItem || 'Sin nombre'} — 
                <strong>${i.cantidad}</strong> — 
                <strong>${i.estadoDevolucion}</strong>
            </li>
            `).join('');

            document.getElementById('detallesContent').innerHTML = `
            <p><strong>Fecha de Devolución:</strong> ${new Date(d.fechaDevolucion).toISOString().split("T")[0]}</p>
            <p><strong>Préstamo Asociado:</strong> ${d.idPrestamo?.nombrePrestamo || 'Sin nombre'}</p>
            <p><strong>Responsable de Devolución:</strong> ${d.idPersonaDevuelve?.nombreCompleto || 'Sin nombre'}</p>

            <p><strong>Total de Ítems Devueltos:</strong> ${d.detalles.length}</p>

            <h6>Detalle de Items</h6>
            <ul>${listaItems}</ul>
            `;

            modalDetalles.show();
        }

        async function guardarDevolucion() {
            const id = document.getElementById('idDevolucion').value;
            const fechaDevolucion = document.getElementById('fechaDevolucion').value + "T12:00:00";
            const idPrestamo = document.getElementById('prestamoAsociado').value;
            const idPersonaDevuelve = document.getElementById('responsable').value;
            const observacionesGenerales = document.getElementById('observaciones').value;

            let detalles = [];
            document.querySelectorAll('#listaItems .detalle-devolucion-item').forEach(div => {
                detalles.push({
                    idItem: div.querySelector('.item').value,
                    cantidad: parseInt(div.querySelector('.cantidad').value),
                    estadoDevolucion: div.querySelector('.estado').value
                });
            });

            const datos = { fechaDevolucion, idPrestamo, idPersonaDevuelve, detalles, observacionesGenerales };

            const url = editando ? `/api/devoluciones/${id}` : '/api/devoluciones';
            const metodo = editando ? 'PUT' : 'POST';

            const res = await fetch(url, {
                method: metodo,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(datos)
            });

            const data = await res.json();
            if (data.ok) {
                modalDevolucion.hide();
                cargarDevoluciones();
                alert(editando ? 'Devolución actualizada correctamente' : 'Devolución creada correctamente');
            } else {
                alert('Error: ' + data.msg);
            }
        }

        async function editarDevolucion(id) {
            const res = await fetch(`/api/devoluciones/${id}`);
            const datos = await res.json();

            if (!datos.ok) {
                alert("Error cargando devoluciones");
                return;
            }

            const d = datos.data;
            editando = true;

            await cargarPrestamos();
            await cargarPersonas();
            await cargarItems();

            document.getElementById('idDevolucion').value = d._id;
            document.getElementById('fechaDevolucion').value = d.fechaDevolucion.split('T')[0];
            document.getElementById('prestamoAsociado').value = d.idPrestamo._id;
            document.getElementById('responsable').value = d.idPersonaDevuelve._id;
            document.getElementById('observaciones').value = d.observacionesGenerales;

            const lista = document.getElementById('listaItems');
            lista.innerHTML = "";

            for (const it of d.detalles) {
                const fila = await agregarItem();
                const select = fila.querySelector('.item');

                if (select.options.length <= 1) {
                    await cargarItemsEnSelect(select);
                }

                select.value = it.idItem?._id || "";
                fila.querySelector('.cantidad').value = it.cantidad;
                fila.querySelector('.estado').value = it.estadoDevolucion;
            }

            document.getElementById('tituloModal').innerText = "Editar Devolución";
            modalDevolucion.show();

        }
    
        async function eliminarDevolucion(id) {
            if (!confirm(`¿Estás seguro de que deseas eliminar la devolución seleccionada?`)) return;

            try {
                const res = await fetch(`/api/devoluciones/${id}`, { method: 'DELETE' });
                const datos = await res.json();

                if (datos.ok) {
                    alert('Devolución eliminada correctamente');
                    cargarDevoluciones();
                } else {
                    alert('Error: ' + datos.msg);
                }
            } catch (error) {
                console.error('Error al eliminar:', error);
            }
        }
    </script>
</body>