<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mantenimientos</li>
        </ol>
    </nav>

    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Gestión de Mantenimientos</h1>
        <button class="btn btn-teal" data-bs-toggle="modal" data-bs-target="#modalMantenimiento">
            <i class="bi bi-plus-circle"></i> Nuevo Mantenimiento
        </button>
    </div>

    <!-- Tabla de Mantenimientos -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="tablaMantenimientos">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha Inicio</th>
                            <th>Tipo</th>
                            <th>Descripción</th>
                            <th>Responsable</th>
                            <th>Fecha Fin</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="cuerpoTabla">
                        <!-- Las filas se cargarán con JavaScript -->
                    </tbody>
                </table>
            </div>
            <div id="sinDatos" class="alert alert-info text-center mt-3">
                No hay mantenimientos registrados aún.
            </div>
        </div>
    </div>

    <!-- Modal para Crear/Editar Mantenimiento -->
    <div class="modal fade" id="modalMantenimiento" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tituloModal">Nuevo Mantenimiento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="formularioMantenimiento">
                        <input type="hidden" id="idMantenimiento">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="idItem" class="form-label">ID del Ítem *</label>
                                    <input type="text" class="form-control" id="idItem" required>
                                    <small class="text-danger" id="errorIdItem"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="tipoMantenimiento" class="form-label">Tipo de Mantenimiento *</label>
                                    <select class="form-control" id="tipoMantenimiento" required>
                                        <option value="">Seleccionar...</option>
                                        <option value="Preventivo">Preventivo</option>
                                        <option value="Correctivo">Correctivo</option>
                                    </select>
                                    <small class="text-danger" id="errorTipo"></small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="descripcionProcedimiento" class="form-label">Descripción del Procedimiento
                                *</label>
                            <textarea class="form-control" id="descripcionProcedimiento" rows="3" required></textarea>
                            <small class="text-danger" id="errorDescripcion"></small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="fechaInicio" class="form-label">Fecha Inicio *</label>
                                    <input type="datetime-local" class="form-control" id="fechaInicio" required>
                                    <small class="text-danger" id="errorFechaInicio"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="fechaFin" class="form-label">Fecha Fin</label>
                                    <input type="datetime-local" class="form-control" id="fechaFin">
                                    <small class="text-danger" id="errorFechaFin"></small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="responsable" class="form-label">Responsable *</label>
                                    <input type="text" class="form-control" id="responsable" required>
                                    <small class="text-danger" id="errorResponsable"></small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="estado" class="form-label">Estado</label>
                                    <select class="form-control" id="estado">
                                        <option value="Activo">Activo</option>
                                        <option value="Cerrado">Cerrado</option>
                                        <option value="Cancelado">Cancelado</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="resultado" class="form-label">Resultado</label>
                            <textarea class="form-control" id="resultado" rows="2"></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="observaciones" class="form-label">Observaciones</label>
                            <textarea class="form-control" id="observaciones" rows="2"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-teal" id="btnGuardar">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const modalMantenimiento = new bootstrap.Modal(document.getElementById('modalMantenimiento'));
        let editando = false;

        // Cargar mantenimientos al iniciar
        cargarMantenimientos();

        // Evento del botón guardar
        document.getElementById('btnGuardar').addEventListener('click', guardarMantenimiento);

        // Evento para limpiar modal al cerrar
        document.getElementById('modalMantenimiento').addEventListener('hidden.bs.modal', () => {
            document.getElementById('formularioMantenimiento').reset();
            document.getElementById('idMantenimiento').value = '';
            document.getElementById('tituloModal').textContent = 'Nuevo Mantenimiento';
            editando = false;
        });

        async function cargarMantenimientos() {
            try {
                const respuesta = await fetch('/api/mantenimientos');
                const datos = await respuesta.json();

                const cuerpoTabla = document.getElementById('cuerpoTabla');
                const sinDatos = document.getElementById('sinDatos');

                cuerpoTabla.innerHTML = '';

                if (datos.ok && datos.data.length > 0) {
                    sinDatos.style.display = 'none';
                    datos.data.forEach(mantenimiento => {
                        const fechaInicio = new Date(mantenimiento.fechaInicio).toLocaleDateString();
                        const fechaFin = mantenimiento.fechaFin ? new Date(mantenimiento.fechaFin).toLocaleDateString() : '-';

                        const fila = document.createElement('tr');
                        fila.innerHTML = `
                        <td>${fechaInicio}</td>
                        <td>
                            <span class="badge bg-${mantenimiento.tipoMantenimiento === 'Preventivo' ? 'info' : 'warning'}">
                                ${mantenimiento.tipoMantenimiento}
                            </span>
                        </td>
                        <td><small>${mantenimiento.descripcionProcedimiento.substring(0, 50)}...</small></td>
                        <td><strong>${mantenimiento.responsable}</strong></td>
                        <td>${fechaFin}</td>
                        <td>
                            <span class="badge bg-${getColorEstado(mantenimiento.estado)}">
                                ${mantenimiento.estado}
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning" onclick="editarMantenimiento('${mantenimiento._id}')">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="eliminarMantenimiento('${mantenimiento._id}')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    `;
                        cuerpoTabla.appendChild(fila);
                    });
                } else {
                    sinDatos.style.display = 'block';
                }
            } catch (error) {
                console.error('Error al cargar mantenimientos:', error);
            }
        }

        function getColorEstado(estado) {
            const colores = {
                'Activo': 'success',
                'Cerrado': 'secondary',
                'Cancelado': 'danger'
            };
            return colores[estado] || 'secondary';
        }

        async function guardarMantenimiento() {
            const id = document.getElementById('idMantenimiento').value;
            const idItem = document.getElementById('idItem').value;
            const tipoMantenimiento = document.getElementById('tipoMantenimiento').value;
            const descripcionProcedimiento = document.getElementById('descripcionProcedimiento').value;
            const fechaInicio = document.getElementById('fechaInicio').value;
            const fechaFin = document.getElementById('fechaFin').value;
            const responsable = document.getElementById('responsable').value;
            const estado = document.getElementById('estado').value;
            const resultado = document.getElementById('resultado').value;
            const observaciones = document.getElementById('observaciones').value;

            if (!idItem || !tipoMantenimiento || !descripcionProcedimiento || !fechaInicio || !responsable) {
                alert('Por favor completa todos los campos requeridos');
                return;
            }

            const datos = {
                idItem,
                tipoMantenimiento,
                descripcionProcedimiento,
                fechaInicio: new Date(fechaInicio).toISOString(),
                fechaFin: fechaFin ? new Date(fechaFin).toISOString() : null,
                responsable,
                estado,
                resultado,
                observaciones
            };

            try {
                const url = editando ? `/api/mantenimientos/${id}` : '/api/mantenimientos';
                const metodo = editando ? 'PUT' : 'POST';

                const respuesta = await fetch(url, {
                    method: metodo,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(datos)
                });

                const resultado_resp = await respuesta.json();

                if (resultado_resp.ok) {
                    alert(editando ? 'Mantenimiento actualizado correctamente' : 'Mantenimiento creado correctamente');
                    modalMantenimiento.hide();
                    cargarMantenimientos();
                } else {
                    alert('Error: ' + resultado_resp.msg);
                }
            } catch (error) {
                console.error('Error al guardar:', error);
                alert('Error al guardar el mantenimiento');
            }
        }

        async function editarMantenimiento(id) {
            try {
                const respuesta = await fetch(`/api/mantenimientos/${id}`);
                const datos = await respuesta.json();

                if (datos.ok) {
                    const mantenimiento = datos.data;
                    document.getElementById('idMantenimiento').value = mantenimiento._id;
                    document.getElementById('idItem').value = mantenimiento.idItem;
                    document.getElementById('tipoMantenimiento').value = mantenimiento.tipoMantenimiento;
                    document.getElementById('descripcionProcedimiento').value = mantenimiento.descripcionProcedimiento;
                    document.getElementById('fechaInicio').value = new Date(mantenimiento.fechaInicio).toISOString().slice(0, 16);
                    document.getElementById('fechaFin').value = mantenimiento.fechaFin ? new Date(mantenimiento.fechaFin).toISOString().slice(0, 16) : '';
                    document.getElementById('responsable').value = mantenimiento.responsable;
                    document.getElementById('estado').value = mantenimiento.estado;
                    document.getElementById('resultado').value = mantenimiento.resultado || '';
                    document.getElementById('observaciones').value = mantenimiento.observaciones || '';
                    document.getElementById('tituloModal').textContent = 'Editar Mantenimiento';
                    editando = true;
                    modalMantenimiento.show();
                }
            } catch (error) {
                console.error('Error al obtener mantenimiento:', error);
            }
        }

        async function eliminarMantenimiento(id) {
            if (!confirm('¿Estás seguro de que deseas eliminar este mantenimiento?')) {
                return;
            }

            try {
                const respuesta = await fetch(`/api/mantenimientos/${id}`, { method: 'DELETE' });
                const datos = await respuesta.json();

                if (datos.ok) {
                    alert('Mantenimiento eliminado correctamente');
                    cargarMantenimientos();
                } else {
                    alert('Error: ' + datos.msg);
                }
            } catch (error) {
                console.error('Error al eliminar:', error);
            }
        }
    </script>
</body>