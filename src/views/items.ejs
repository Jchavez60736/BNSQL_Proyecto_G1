<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Items</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Gestión de Items</h1>

        <div class="d-flex gap-2">
            <select id="filtroCategoria" class="form-select" style="width: 200px;" onchange="cargarItems()">
                <option value="">Todas las categorías</option>
            </select>
            <a href="/categorias" class="btn btn-secondary">
                <i class="bi bi-tags"></i> Gestionar Categorías
            </a>
            <button class="btn btn-teal" data-bs-toggle="modal" data-bs-target="#modalItem">
                <i class="bi bi-plus-circle"></i> Nuevo Item
            </button>
        </div>

    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="tablaItems">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre del Item</th>
                            <th>Categoría</th>
                            <th>Descripción</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="cuerpoTabla"></tbody>
                </table>
            </div>

            <div id="sinDatos" class="alert alert-info text-center mt-3" style="display:none;">
                No hay items registrados aún.
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalItem" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="tituloModal">Nuevo Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form id="formItem">

                        <input type="hidden" id="idItem">

                        <div class="mb-3">
                            <label class="form-label">Nombre del Item *</label>
                            <input type="text" class="form-control" id="nombreItem" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Categoría *</label>
                            <select class="form-control" id="categoria" required></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Descripción *</label>
                            <input type="text" class="form-control" id="descripcion" required>
                        </div>

                        <div class="mb-3">
                            <label for="estado" class="form-label">Estado</label>
                            <select class="form-control" id="estado">
                                <option value="Activo">Activo</option>
                                <option value="En Mantenimiento">En Mantenimiento</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button class="btn btn-teal" id="btnGuardar">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const modalItem = new bootstrap.Modal(document.getElementById('modalItem'));
        let editando = false;

        cargarCategoriasFiltro();
        cargarItems();

        document.getElementById('btnGuardar').addEventListener('click', guardarItem);
        document.getElementById('modalItem').addEventListener('show.bs.modal', cargarCategorias);
        document.getElementById('modalItem').addEventListener('hidden.bs.modal', () => {
            document.getElementById('formItem').reset();
            document.getElementById('idItem').value = '';
            document.getElementById('tituloModal').textContent = 'Nuevo Item';
            editando = false;
        });

        async function cargarItems() {
            try {
                const categoria = document.getElementById('filtroCategoria').value;
                let url = '/api/items';

                if (categoria) {
                    url += `?categoria=${encodeURIComponent(categoria)}`;
                }

                const respuesta = await fetch(url);
                const datos = await respuesta.json();

                const cuerpoTabla = document.getElementById('cuerpoTabla');
                const sinDatos = document.getElementById('sinDatos');

                cuerpoTabla.innerHTML = '';

                if (datos.ok && datos.data.length > 0) {
                    sinDatos.style.display = 'none';

                    datos.data.forEach(item => {
                        const fila = document.createElement('tr');
                        fila.innerHTML = `
                            <td><strong>${item.nombreItem}</strong></td>
                            <td>${item.categoria?.nombre || 'Sin categoría'}</td>
                            <td>${item.descripcion}</td>
                            <td>
                                <span class="badge ${item.estado === 'Activo'
                                ? 'bg-success'
                                : item.estado === 'En Mantenimiento'
                                    ? 'bg-warning'
                                    : 'bg-danger'
                            }">${item.estado}</span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-warning" onclick="editarItem('${item._id}')">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="eliminarItem('${item._id}', '${item.nombreItem}')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        `;
                        cuerpoTabla.appendChild(fila);
                    });
                } else {
                    sinDatos.style.display = 'block';
                }
            } catch (error) {
                console.error('Error al cargar items:', error);
            }
        }

        async function guardarItem() {
            const id = document.getElementById('idItem').value.trim();
            const nombreItem = document.getElementById('nombreItem').value.trim();
            const categoria = document.getElementById('categoria').value;
            const descripcion = document.getElementById('descripcion').value.trim();
            const estado = document.getElementById('estado').value;

            if (!nombreItem || !categoria || !descripcion) {
                alert('Todos los campos obligatorios deben completarse');
                return;
            }

            const datos = { nombreItem, categoria, descripcion, estado };

            try {
                const url = editando ? `/api/items/${id}` : '/api/items';
                const metodo = editando ? 'PUT' : 'POST';

                const respuesta = await fetch(url, {
                    method: metodo,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(datos)
                });

                const resultado = await respuesta.json();

                if (resultado.ok) {
                    alert(editando ? 'Item actualizado correctamente' : 'Item creado correctamente');
                    modalItem.hide();
                    cargarItems();
                } else {
                    alert('Error: ' + resultado.msg);
                }
            } catch (error) {
                console.error('Error al guardar:', error);
                alert('Error al guardar el Item');
            }
        }

        async function editarItem(id) {
            try {
                const respuesta = await fetch(`/api/items/${id}`);
                const datos = await respuesta.json();

                if (!datos.ok) {
                    alert('No se pudo cargar el item');
                    return;
                }

                const item = datos.data;

                await cargarCategorias();

                document.getElementById('idItem').value = item._id;
                document.getElementById('nombreItem').value = item.nombreItem;
                document.getElementById('descripcion').value = item.descripcion;
                document.getElementById('categoria').value = item.categoria?._id;
                document.getElementById('estado').value = item.estado;

                editando = true;
                document.getElementById('tituloModal').textContent = 'Editar Item';
                modalItem.show();

            } catch (error) {
                console.error('Error al obtener item:', error);
            }
        }

        async function eliminarItem(id, nombre) {
            if (!confirm(`¿Estás seguro de que deseas eliminar ${nombre}?`)) {
                return;
            }

            try {
                const respuesta = await fetch(`/api/items/${id}`, { method: 'DELETE' });
                const datos = await respuesta.json();

                if (datos.ok) {
                    alert('Item eliminado correctamente');
                    cargarItems();
                } else {
                    alert('Error: ' + datos.msg);
                }
            } catch (error) {
                console.error('Error al eliminar:', error);
            }
        }

        async function cargarCategorias() {
            try {
                const resp = await fetch('/api/categorias');
                const datos = await resp.json();

                const select = document.getElementById('categoria');
                select.innerHTML = ''; 

                if (datos.ok && datos.data.length > 0) {
                    datos.data.forEach(cat => {
                        const option = document.createElement('option');
                        option.value = cat._id;
                        option.textContent = cat.nombre;
                        select.appendChild(option);
                    });
                } else {
                    const option = document.createElement('option');
                    option.textContent = "No hay categorías registradas";
                    option.disabled = true;
                    select.appendChild(option);
                }

            } catch (error) {
                console.error("Error cargando categorías:", error);
            }
        }

        async function cargarCategoriasFiltro() {
            try {
                const resp = await fetch('/api/categorias');
                const datos = await resp.json();

                const filtro = document.getElementById('filtroCategoria');
                filtro.innerHTML = '<option value="">Todas las categorías</option>';

                if (datos.ok && datos.data.length > 0) {
                    datos.data.forEach(cat => {
                        const option = document.createElement('option');
                        option.value = cat._id;
                        option.textContent = cat.nombre;
                        filtro.appendChild(option);
                    });
                }

            } catch (error) {
                console.error("Error cargando categorías:", error);
            }
        }


    </script>
</body>