<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>
        <%= (typeof titulo !== 'undefined' && titulo) ? titulo : 'Panel' %> | Happy Kids
    </title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- ESTILOS PERSONALIZADOS -->
    <link rel="stylesheet" href="/css/styles.css" />

    <!-- JS PERSONALIZADO -->
    <script src="/js/main.js" defer></script>
</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- =====================================================
         SIDEBAR
    ====================================================== -->
        <aside id="sidebar" class="sidebar d-flex flex-column">

            <!-- Usuario -->
            <div class="p-3 d-flex align-items-center gap-3 border-bottom border-teal-light">
                <div class="avatar-circle">
                    <span class="avatar-initial">
                        <%= nombreCompleto && nombreCompleto.length > 0 ? nombreCompleto[0].toUpperCase() : "U" %>
                    </span>
                </div>

                <div>
                    <div class="fw-semibold">
                        <%= nombreCompleto || "Usuario" %>
                    </div>
                    <small class="text-white-50">
                        <%= rol || "Rol" %>
                    </small>
                </div>
            </div>

            <!-- Menú -->
            <nav class="flex-grow-1 p-3">
                <ul class="nav flex-column gap-1">

                    <li>
                        <a href="/home" class="nav-link">
                            <i class="bi bi-house me-2"></i> Inicio
                        </a>
                    </li>

                    <li>
                        <a href="/usuarios" class="nav-link">
                            <i class="bi bi-people me-2"></i> Usuarios
                        </a>
                    </li>

                    <li>
                        <a href="/iglesias" class="nav-link">
                            <i class="bi bi-bank me-2"></i> Iglesias
                        </a>
                    </li>

                    <li>
                        <a href="/personas" class="nav-link">
                            <i class="bi bi-person-circle me-2"></i> Personas
                        </a>
                    </li>

                    <li>
                        <a href="/proveedores" class="nav-link">
                            <i class="bi bi-truck me-2"></i> Proveedores
                        </a>
                    </li>

                    <li>
                        <a href="/inventario" class="nav-link">
                            <i class="bi bi-box-seam me-2"></i> Inventario
                        </a>
                    </li>

                    <li>
                        <a href="/prestamos" class="nav-link">
                            <i class="bi bi-journal-arrow-right me-2"></i> Préstamos
                        </a>
                    </li>

                    <li>
                        <a href="/devoluciones" class="nav-link">
                            <i class="bi bi-arrow-return-left me-2"></i> Devoluciones
                        </a>
                    </li>

                    <li>
                        <a href="/mantenimientos" class="nav-link">
                            <i class="bi bi-wrench me-2"></i> Mantenimientos
                        </a>
                    </li>

                </ul>
            </nav>

            <!-- Cerrar sesión -->
            <div class="p-3 border-top border-teal-light">
                <a href="/logout" class="btn btn-outline-light w-100">
                    <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
                </a>
            </div>

        </aside>

        <!-- =====================================================
        CONTENIDO PRINCIPAL
    ====================================================== -->
        <main id="page-content" class="flex-grow-1">
            <!-- Encabezado -->
            <header class="px-4 py-3 bg-white border-bottom shadow-sm">
                <h1 class="h4 m-0 text-teal">
                    <%= titulo || "Panel Administrativo" %>
                </h1>
            </header>

            <!-- Contenido dinámico -->
            <section class="p-4">
                <%- body %>
            </section>

        </main>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>